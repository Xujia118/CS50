def main():
    
    while True:
        n = int(input("Height: "))
        if n >= 1 and n <= 8:
            break

    for row in range(1, n + 1, 1):
        print(" " * (n - row), "#" * row, "  ", "#" * row, " " * (n - row), sep="")
        # Funtion print() contains a space by default. Remove it by sep=""

main()
